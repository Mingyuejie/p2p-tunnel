<UserControl x:Class="client.ui.plugins.chat.TextExchangeReceiveFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client.ui.plugins.chat"
             mc:Ignorable="d" >
    <StackPanel  Margin="10 10 10 0">
        <WrapPanel>
            <TextBlock Name="time">2021-07-13 17:14</TextBlock>
        </WrapPanel>
        <WrapPanel>
            <local:FileBorder  x:Name="border" Background="{StaticResource BorderBrush}" Padding="6 0 6 0" Margin="0 4 0 0" CornerRadius="2">
                <TextBox Name="content" Padding="0" Background="Transparent" BorderThickness="0"  IsReadOnly="True"  TextWrapping="Wrap"></TextBox>
            </local:FileBorder>
        </WrapPanel>
    </StackPanel>
</UserControl>
