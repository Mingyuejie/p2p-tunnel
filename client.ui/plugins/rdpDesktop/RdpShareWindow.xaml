<Window x:Class="client.ui.plugins.rdpDesktop.RdpShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client.ui.plugins.rdpDesktop"
        xmlns:rdp="clr-namespace:RDPCOMAPILib;assembly=Interop.RDPCOMAPILib"
        mc:Ignorable="d"
        Title="桌面分享" Height="768" Width="1566" Closing="WindowClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" Name="leftColumn"></ColumnDefinition>
            <ColumnDefinition Width="1"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="wfhWrap"></RowDefinition>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="0" Grid.Column="1" Width="1" HorizontalAlignment="Stretch" />
        <StackPanel Grid.Row="0" Grid.Column="2" Name="wfhContent" Background="#000">
            <WindowsFormsHost Name="wfh"></WindowsFormsHost>
        </StackPanel>
    </Grid>
</Window>
